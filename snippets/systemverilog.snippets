	      default input #setup_time output #hold_time;
	      input sync_txd;
	      inout sync_dat;
	   endclocking: sck1
	
	   clocking sck2 @(posedge ck2);
	      default input #setup_time output #hold_time;
	      output sync_rxd;
	   endclocking: sck2
	
	
	   // ToDo: Define one clocking block per clock domain
	   //       with synchronous signal direction from a
